<ScrollPane minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.actionline.GetSliderSettingsPopUpController">
   <content>
      <VBox fx:id="SortGetRangePopUp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" onMouseClicked="#nextButtonOnClick">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="Minimum Value:" />
                  <TextField fx:id="minimumValueTextBox" minHeight="-Infinity" minWidth="-Infinity" prefWidth="80.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox spacing="10.0">
               <children>
                  <Label text="Maximum Value:" />
                  <TextField fx:id="maximumValueTextBox" minHeight="-Infinity" minWidth="-Infinity" prefWidth="80.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox layoutX="10.0" layoutY="55.0" spacing="10.0">
               <children>
                  <Label text="Step Size:" />
                  <TextField fx:id="stepSizeTextBox" minHeight="-Infinity" minWidth="-Infinity" prefWidth="80.0" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <Button fx:id="nextButton" alignment="TOP_LEFT" mnemonicParsing="false" onMouseClicked="#nextButtonOnClick" text="Next">
               <VBox.margin>
                  <Insets bottom="10.0" left="180.0" right="10.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </content>
</ScrollPane>
