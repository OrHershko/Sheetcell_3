<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<ScrollPane fx:id="scrollPane" minHeight="-Infinity" minWidth="-Infinity" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="components.graph.GetGraphRangePopUpController">
   <content>
      <VBox fx:id="getGraphRangePopUp" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity">
         <children>
            <HBox spacing="10.0">
               <children>
                  <Label text="X Axis Column:" />
                  <ChoiceBox fx:id="xColumnsChoiceBox" />
                  <Label text="X Axis Range:" />
                  <TextField fx:id="XAxisRangeTextField" minHeight="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Enter a range of rows (e.g., 1-3)" />
               </children>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <HBox minHeight="-Infinity" minWidth="-Infinity" spacing="10.0">
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <children>
                  <Label text="Y Axis Column:" />
                  <ChoiceBox fx:id="yColumnsChoiceBox" />
                  <Label text="Y Axis Range:" />
                  <TextField fx:id="YAxisRangeTextField" minHeight="-Infinity" minWidth="-Infinity" prefWidth="200.0" promptText="Enter a range of rows (e.g., 1-3)" />
               </children>
            </HBox>
            <Button fx:id="buildGraphButton" mnemonicParsing="false" onMouseClicked="#buildGraphOnClick" text="Build Graph">
               <VBox.margin>
                  <Insets bottom="20.0" left="350.0" right="20.0" top="10.0" />
               </VBox.margin>
            </Button>
         </children>
      </VBox>
   </content>
</ScrollPane>
