         <center>
            <AnchorPane prefHeight="200.0" prefWidth="1054.0" BorderPane.alignment="TOP_LEFT">
               <children>
                    <fx:include fx:id="mainGridComponent" source="../components/maingrid/MainGrid.fxml" BorderPane.alignment="TOP_LEFT" />
               </children>
